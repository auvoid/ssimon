{
  "compilerOptions": {
      "module": "ESNext",
      "target": "ESNext",
      "sourceMap": true,
      "outDir": "./dist",
      "noImplicitAny": true,
      "declaration": true,
      "skipLibCheck": true,
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "moduleResolution": "node",
      "strictPropertyInitialization": false
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "src/tests"]
}